// Bach's Zero-Installtion Build Script

/open https://github.com/sormuras/bach/raw/main/boot

var status = 0
try {
  status = com.github.sormuras.bach.Main.run("build", "build");
  System.out.println();
  System.out.println("Have fun! https://github.com/sponsors/sormuras (-:");
  System.out.println();
} catch (Throwable throwable) {
  System.err.println();
  System.err.println("Build error detected: " + throwable.getMessage());
  System.err.println();
  throwable.printStackTrace(System.err);
  status = -1;
}

/exit status
